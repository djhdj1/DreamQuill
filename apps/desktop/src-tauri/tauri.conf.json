{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DreamQuill",
  "version": "0.1.0",
  "identifier": "com.dreamquill.app",
  "build": {
    "beforeBuildCommand": "npm run build --workspace @dreamquill/ui",
    "beforeDevCommand": "npm run dev --workspace @dreamquill/ui",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../packages/ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "DreamQuill",
        "width": 1280,
        "height": 820,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app"],
    "icon": ["icons/icon.png"],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  }
}
